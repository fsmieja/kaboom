<%= form_tag note_position_path, remote: true, id: "position_form", method: :put do %>
	<%= hidden_field_tag "id" %>
	<%= hidden_field_tag "top" %>
	<%= hidden_field_tag "left" %>
<% end %>

<script type="text/javascript">

$(function() {
  $(".draggable").draggable({
  	stack: ".draggable", 
  	containment: "<%= confine_to %>",
  	start: function( event, ui) {
  		$(this).draggable( "option", "containment", "<%= confine_to %>" );
  	},
  	stop: function( event, ui ) {
  		var id = $(this).attr("note_id");
  		var top = ui.position.top;
  		var left = ui.position.left;
		var zindex = $( this ).css("z-index");
  		$('#id').val(id);
  		$('#top').val(top);
  		$('#left').val(left);
		$('#position_form').submit();
  		$(this).draggable( "option", "containment", "<%= confine_to %>" );
  	}
  });
  

});
</script>