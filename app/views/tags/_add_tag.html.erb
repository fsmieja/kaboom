<% path = id>0 ? "/#{resource}/#{id}/add_tag" : new_tag_path %>

<%= form_tag path, remote: true, method: :put, id: "new-tag-form" do %>
	<%= text_field_tag :new_tag %>	
  	<%= submit_tag 'Add Tag' %>  
<% end %>


<script>
$(function() {

var availableTags = [
	<% all_tags.each_with_index do |t,i| %>
	   <% if i>0 %>
	     ,
	   <% end %> 
		"<%= t.name %>"
	<% end %>
];

$("#new_tag").autocomplete({
	source: availableTags
});

});
</script>
